@page
@using AMMM.Ganzer.App.Helpers
@model RegisterModel
@{
    ViewData["Title"] = "تسجيل مستخدم جديد";
}
<br />
<h2>@ViewData["Title"]</h2>

<div class="col-md-6">

        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" enctype="multipart/form-data">
            <hr />
            
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
           <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true"/>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
           </div> 

            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.Name"></label>
                <input asp-for="Input.Name" class="form-control" aria-required="true" />
                <span asp-validation-for="Input.Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.BirthDate"></label>
                <input asp-for="Input.BirthDate" class="form-control" aria-required="true" type="date"/>
                <span asp-validation-for="Input.BirthDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.Governate"></label>
                <select asp-for="Input.Governate" class="form-control" asp-items="Html.GetEnumSelectList<Governate>()" aria-required="true"></select>
                <span asp-validation-for="Input.Governate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.District"></label>
                <select asp-for="Input.District" class="form-control" asp-items="Html.GetEnumSelectList<District>()" aria-required="true"></select>
                <span asp-validation-for="Input.District" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.FitnessLevel"></label>
                <select asp-for="Input.FitnessLevel" class="form-control" asp-items="Html.GetEnumSelectList<FitnessLevel>()" aria-required="true"></select>
                <span asp-validation-for="Input.FitnessLevel" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.PhoneNumber"></label>
                <input asp-for="Input.PhoneNumber" class="form-control"  aria-required="true" />
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.EmergencyPhone"></label>
                <input asp-for="Input.EmergencyPhone" class="form-control"  aria-required="true" />
                <span asp-validation-for="Input.EmergencyPhone" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.DateOfRidingBike"></label>
                <input asp-for="Input.DateOfRidingBike" class="form-control"  aria-required="true" type="date"/>
                <span asp-validation-for="Input.DateOfRidingBike" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.DateOfJoiningTheGroup"></label>
                <input asp-for="Input.DateOfJoiningTheGroup" class="form-control"  aria-required="true" type="date"/>
                <span asp-validation-for="Input.DateOfJoiningTheGroup" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.ProfilePic"></label>
                <input asp-for="Input.ProfilePic" class="form-control" aria-required="true"/>
                <span asp-validation-for="Input.ProfilePic" class="text-danger"></span>
            </div>
            
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">تسجيل</button>
        
        </form>

</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
